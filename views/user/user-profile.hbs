                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-lg-8" id="orders" style="display: none;">
            <h4 class="font-color text-center">My Orders</h4>
            <div class="row justify-content-center">
                {{#each orderDetails}}
                <div class="col-md-9">
                    <div class="card mt-3" style="height:20em">
                        <div class="row">
                            <div class="d-flex justify-content-between mt-3 my-3">
                                <div class="col-3">
                                    <div class="keys ms-3">
                                        <h6>Order ID :</h6>
                                        <h6>Billing Address:</h6>
                                        <br>
                                        <h6>Time:</h6>
                                        <h6>Total :</h6>
                                        {{#if this.discount}}
